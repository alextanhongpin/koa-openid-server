{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://localhost:3000/schemas/authorize-request.json#",
  "title": "introspect",
  "type": "object",
  "additionalProperties": false,
  "required": [ "response_type", "scope", "client_id", "redirect_uri" ],
  "properties": {
    "response_type": {
    	"type": "string", 
    	"enum": ["code"]
	  },
    "scope": { 
    	"type": "array",
    	"enum": ["openid", "email"]
    },
    "state": {
      "type": "string"
    },
    "redirect_uri": {
      "type": "string",
      "format": "uri"
    },
    "client_id": {
      "type": "string"
    }
  }
}
