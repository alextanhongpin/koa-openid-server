{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://localhost:3000/schemas/introspect-request.json#",
  "title": "introspect",
  "type": "object",
  "additionalProperties": false,
  "required": [ "token", "token_type_hint" ],
  "properties": {
    "token": {
    	"type": "string", 
    	"minLength": 1 
	},
    "token_type_hint": { 
    	"type": "string",
    	"enum": ["refresh_token", "access_token"]
    }
  }
}
