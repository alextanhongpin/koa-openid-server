{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://localhost:3000/schemas/post-client-request.json#",
  "title": "client",
  "type": "object",
  "additionalProperties": false,
  "required": [ "client_id", "client_secret", "grant_types", "responses_types", "client_name" ],
  "properties": {
    "client_id": {
    	"type": "string"
	  },
    "client_secret": { 
      "type": "string"
    },
    "grant_types": {
      "type": "array",
      "enum": ["authorization_code", "refresh_token"]
    },
    "responses_types": {
      "type": "array",
      "enum": ["code"]
    },
    "client_name": {
      "type": "string"
    },
    "contacts": {
      "type": "array"
    },
    "logo_uri": {
      "type": "string"
    },
    "tos_uri": {
      "type": "string"
    },
    "policy_uri": {
      "type": "string"
    },
    "redirect_uris": {
      "type": "array"
    }
  }
}
