{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://localhost:3000/schemas/post-client-response.json#",
  "title": "Response returned after the client has been successfully created",
  "type": "object",
  "additionalProperties": false,
  "required": [ "client_id", "client_secret" ],
  "properties": {
    "client_id": {
      "type": "string"
    },
    "client_secret": {
      "type": "string"
    },
    "client_uri": {
      "type": "string"
    },
    "token_endpoint_auth_method": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["client_secret_basic"]
      }
    },
    "client_id_issued_at": {
      "type": "number"
    },
    "client_secret_expires_at": {
      "type": "number"
    },
    "grant_types": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["authorization_code", "refresh_token"]
      }
    },
    "responses_types": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["code"]
      }
    },
    "client_name": {
      "type": "string"
    },
    "logo_uri": {
      "type": "string"
    },
    "tos_uri": {
      "type": "string"
    },
    "policy_uri": {
      "type": "string"
    },
    "redirect_uris": {
      "type": "array"
    },
    "application_type": {
      "type": "string"
    },
    "scope": {
      "type": "array"
    }
  }
}
